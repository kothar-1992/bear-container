<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:background="@color/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!-- Timer Account -->
            <LinearLayout
                android:id="@+id/timeraccount"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_coming"
                android:backgroundTint="@color/secodary"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/digital"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="@string/days"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.1"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="30sp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/digital"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/white"
                            android:textSize="25sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"

                            android:text="@string/hours"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.1"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/minutes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/digital"
                            android:gravity="center"

                            android:text="00"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="@string/minutes"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.1"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1.7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/second"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/digital"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="@string/seconds"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!-- Menu Hack -->

            <LinearLayout
                android:id="@+id/awdawd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/timeraccount"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/cornertop"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/font_raleway_medium"
                        android:gravity="center"
                        android:text="@string/SafeMode"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="visible" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/awdawd"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_coming"
                android:backgroundTint="@color/secodary"
                android:gravity="center|top"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/button_play"
                            android:layout_width="fill_parent"
                            android:layout_height="2.0dip"
                            android:layout_marginTop="60.0dip"
                            android:layout_marginStart="20.0dip"
                            android:layout_marginEnd="20.0dip" />
                        <LinearLayout
                            android:background="@drawable/button_play"
                            android:layout_width="fill_parent"
                            android:layout_height="2.0dip"
                            android:layout_marginTop="100.0dip"
                            android:layout_marginStart="20.0dip"
                            android:layout_marginEnd="20.0dip" />
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/starthack"
                            android:visibility="visible"
                            android:layout_width="150.0dip"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon"
                            android:adjustViewBounds="true" />
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/stophack"
                            android:visibility="gone"
                            android:layout_width="150.0dip"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon"
                            android:adjustViewBounds="true" />
                    </FrameLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/bgfituron"
                            android:layout_width="15.0dip"
                            android:layout_height="15.0dip"
                            android:elevation="10.0dip"
                            android:backgroundTint="@color/IJO" />
                        <TextView
                            android:textSize="12.0sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="@string/activity_mode_textsstart_text"
                            android:fontFamily="@font/raleway_medium"
                            android:layout_marginStart="5.0dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="35.0dip"
                    android:layout_marginTop="15.0dip"
                    android:weightSum="2.0"
                    android:layout_marginStart="15.0dip"
                    android:layout_marginEnd="15.0dip">
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/global"
                        android:background="@drawable/button_coming"
                        android:layout_width="80.0dip"
                        android:layout_height="fill_parent">
                        <TextView
                            android:textSize="12.0sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="@string/global"
                            android:fontFamily="@font/raleway_medium" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/korea"
                        android:background="@drawable/button_normal"
                        android:layout_width="80.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10.0dip">
                        <TextView
                            android:textSize="12.0sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="@string/korea"
                            android:fontFamily="@font/raleway_medium" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/vietnam"
                        android:background="@drawable/button_normal"
                        android:layout_width="80.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10.0dip">
                        <TextView
                            android:textSize="12.0sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="@string/vietnam"
                            android:fontFamily="@font/raleway_medium" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="35.0dip"
                    android:layout_marginTop="15.0dip">
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/taiwan"
                        android:background="@drawable/button_normal"
                        android:layout_width="130.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10.0dip">
                        <TextView
                            android:textSize="12.0sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="@string/taiwan"
                            android:fontFamily="@font/raleway_medium" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/india"
                        android:background="@drawable/button_normal"
                        android:layout_width="130.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10.0dip">
                        <TextView
                            android:textSize="12.0sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="@string/india"
                            android:fontFamily="@font/raleway_medium" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/button_play"
                    android:paddingBottom="20.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:backgroundTint="@color/secodary">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/groupesp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/esp64"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:background="@drawable/selector_radiobutton"
                            android:button="@null"
                            android:checked="true"
                            android:fontFamily="@font/mfontx"
                            android:gravity="center"
                            android:text="64 Bit" />

                        <RadioButton
                            android:id="@+id/esp32"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/selector_radiobutton"
                            android:button="@null"
                            android:fontFamily="@font/mfontx"
                            android:gravity="center"
                            android:text="32 Bit" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuselectesp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:weightSum="2">


                    <RadioGroup
                        android:id="@+id/groupmode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/system"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radiobutton"
                            android:button="@null"
                            android:checked="true"
                            android:fontFamily="@font/font_raleway_medium"
                            android:gravity="center"
                            android:text="正常模式" />


                        <RadioButton
                            android:id="@+id/kernel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radiobutton"
                            android:button="@null"
                            android:fontFamily="@font/font_raleway_medium"
                            android:gravity="center"
                            android:text="内核模式" />


                    </RadioGroup>


                </LinearLayout>


            </LinearLayout>


            <!-- Antiban root -->
            <LinearLayout
                android:id="@+id/menuantiban"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/option"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/button_coming"
                android:backgroundTint="@color/secodary"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/success_250px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/en_regular"
                        android:gravity="center"
                        android:text="代表安全   |"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_error" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/en_regular"
                        android:gravity="center"
                        android:text="则相反"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutprtc"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/button_install"
                    android:backgroundTint="@color/background">


                    <LinearLayout
                        android:id="@+id/protection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imgs1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/circlegl" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7">

                            <TextView
                                android:id="@+id/textversions1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/en_regular"
                                android:gravity="center"
                                android:text="@string/protection_global"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.9"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:padding="13dp"
                                android:src="@drawable/success_250px" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!-- Container Mode -->

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/option"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/button_install"
                android:backgroundTint="@color/secodary"
                android:gravity="center|top"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/button_install"
                        android:elevation="5dp"
                        android:fontFamily="@font/cof"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="安装游戏/启动游戏"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>